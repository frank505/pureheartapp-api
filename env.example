NODE_ENV=development
PORT=3000
HOST=0.0.0.0

# Database Configuration
DB_HOST=db
DB_PORT=3306
DB_NAME=yourapp
DB_USER=user
DB_PASSWORD=password

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=

# JWT Configuration
JWT_SECRET=your_jwt_secret
JWT_EXPIRES_IN=1h
JWT_REFRESH_EXPIRES_IN=7d

# Email Configuration (using Mailtrap for example)
EMAIL_HOST=smtp.mailtrap.io
EMAIL_PORT=2525
EMAIL_SECURE=false
EMAIL_USER=your_mailtrap_user
EMAIL_PASS=your_mailtrap_pass
EMAIL_FROM="Your App <no-reply@yourapp.com>"

# Application Configuration
APP_NAME="Your App Name"
APP_URL=http://localhost:3000
API_URL=http://localhost:3000
FRONTEND_URL=http://localhost:4200
APP_STORE_URL=https://apps.apple.com/app/your-app-name/idYOUR_APP_ID

# Security Configuration
BCRYPT_ROUNDS=10
PASSWORD_RESET_EXPIRES=3600000 # 1 hour in milliseconds
EMAIL_VERIFICATION_EXPIRES=86400000 # 24 hours in milliseconds

# Google OAuth Configuration
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_REDIRECT_URI=http://localhost:3000/api/auth/google/callback

# Apple OAuth Configuration
APPLE_CLIENT_ID=your_apple_client_id    # Bundle ID for iOS/native apps (e.g., com.100klabs.pureheart)
APPLE_SERVICE_ID=your_apple_service_id  # Service ID for web authentication (e.g., com.100klabs.pureheart.web)
APPLE_TEAM_ID=your_apple_team_id
APPLE_KEY_ID=your_apple_key_id
APPLE_PRIVATE_KEY=your_apple_private_key
APPLE_REDIRECT_URI=http://localhost:3000/api/auth/apple/callback

# OAuth deep link redirect (where we send the user with our JWT)
OAUTH_REDIRECT_URI=pureheart://auth/callback

# Invite Match Configuration
INVITE_MATCH_WINDOW_SECONDS=300

# YouTube/Google API for recommendations search
GOOGLE_API_KEY=your-google-api-key

# Optional: Gemini 2.0 Flash for advanced query generation
GEMINI_API_KEY=your-gemini-api-key

# Firebase Admin (for push notifications)
# Put the entire service account JSON in one line (escape newlines) or base64-decode at runtime if you prefer.
FIREBASE_SERVICE_ACCOUNT_JSON=

# RevenueCat / Subscriptions (backend optional secret; do NOT put public SDK keys here for clients)
# If you set REVENUECAT_WEBHOOK_SECRET, incoming webhook signatures will be validated.
REVENUECAT_WEBHOOK_SECRET=
# Entitlement identifiers (can override if you change in dashboard)
REVENUECAT_ENTITLEMENT_PREMIUM=premium

