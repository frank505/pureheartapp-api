{
  "name": "christian-recovery-app",
  "version": "1.0.0",
  "description": "A Node.js Fastify API for Christian recovery app with authentication",
  "main": "dist/server.js",
  "scripts": {
    "dev": "nodemon",
    "debug": "nodemon --exec node --inspect=0.0.0.0:9229 -r ts-node/register src/server.ts",
    "build": "tsc && npm run build:copy-assets",
    "build:copy-assets": "cp -r src/1min_clips dist/1min_clips",
    "start": "node dist/server.js",
    "typecheck": "tsc --noEmit",
    "audio:normalize": "ts-node scripts/normalizeAudioNames.ts",
    "seed:articles": "ts-node scripts/seedArticles.ts",
    "reseed:articles": "ts-node scripts/reseedArticles.ts",
    "docker:dev": "docker-compose up --build",
    "docker:prod": "docker-compose -f docker-compose.prod.yml up --build"
  },
  "keywords": [
    "fastify",
    "typescript",
    "authentication",
    "mysql",
    "redis",
    "jwt"
  ],
  "author": "Franklin Akpu",
  "license": "MIT",
  "dependencies": {
    "@bull-board/api": "^5.10.2",
    "@bull-board/fastify": "^5.10.2",
    "@bull-board/ui": "^5.10.2",
    "@fastify/cors": "^8.4.0",
    "@fastify/formbody": "^7.4.0",
    "@fastify/helmet": "^11.1.1",
    "@fastify/jwt": "^7.2.4",
    "@fastify/redis": "^6.1.1",
    "@fastify/static": "^6.12.0",
    "@google/generative-ai": "^0.24.1",
    "@types/joi": "^17.2.2",
    "@types/node-cron": "^3.0.11",
    "apple-signin-auth": "^2.0.0",
    "axios": "^1.12.2",
    "basic-auth": "^2.0.1",
    "bcryptjs": "^2.4.3",
    "bullmq": "^4.15.4",
    "crypto-random-string": "^5.0.0",
    "dotenv": "^16.3.1",
    "express-winston": "^4.2.0",
    "fastify": "^4.24.3",
    "firebase-admin": "^12.6.0",
    "fs-extra": "^11.3.2",
    "google-auth-library": "^10.2.1",
    "googleapis": "^156.0.0",
    "joi": "^18.0.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.1",
    "mysql2": "^3.6.3",
    "node-cron": "^4.2.1",
    "nodemailer": "^6.9.7",
    "resend": "^6.0.2",
    "sequelize": "^6.35.0",
    "tail-file": "^1.4.16",
    "uuid": "^9.0.1",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "@types/basic-auth": "^1.1.8",
    "@types/bcryptjs": "^2.4.6",
    "@types/fs-extra": "^11.0.4",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/morgan": "^1.9.10",
    "@types/node": "^20.8.10",
    "@types/nodemailer": "^6.4.14",
    "@types/uuid": "^9.0.7",
    "@typescript-eslint/eslint-plugin": "^6.11.0",
    "@typescript-eslint/parser": "^6.11.0",
    "eslint": "^8.53.0",
    "nodemon": "^3.0.1",
    "pino-pretty": "^10.2.3",
    "sequelize-cli": "^6.6.3",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.2.2"
  }
}
